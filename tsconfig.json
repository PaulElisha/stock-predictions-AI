{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2022",
        "allowJs": true
    },
    "include": [
        "src/**/*.ts",
        "api/**/*.ts",
        "@types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/workers"
    ]
}