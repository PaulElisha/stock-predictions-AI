{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2022"
    },
    "include": [
        "src/**/*.ts",
        "@types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/workers"
    ]
}