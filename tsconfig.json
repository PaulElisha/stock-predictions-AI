{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "emitDeclarationOnly": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "src/**/*.ts",
        "@types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}